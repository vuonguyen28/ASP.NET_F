@{
    ViewBag.Title = "Login";
    //Layout = "~/Views/Share/LayoutPage_Customer.cshtml";
}

<style>
    body {
        background-image: url('../../Image/image_Banner/Banner_SanPham.jpg');
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
    }

    footer {
        display: none;
    }
</style>
<style>
    /* CSS */
    /* body {
        background-color: aqua;
        display: flex;
    }*/

    .form_ctn_Login {
        width: 400px;
        height: 450px;
        background-color: rgba(255, 255, 255, 0.8);
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        border-radius: 10px;
        box-sizing: border-box;
        padding: 20px 30px;
    }

    .Title_Login {
        text-align: center;
        font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande", "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
        margin: 10px 0 20px 0;
        font-size: 28px;
        font-weight: 800;
    }

    .form_login {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 18px;
        margin-bottom: 15px;
    }

    .Input_User {
        border-radius: 20px;
        /*border: 1px solid #c0c0c0;*/
        outline: 0 !important;
        box-sizing: border-box;
        padding: 12px 15px;
        /*padding-left: 39px;*/
    }

        .Input_User label {
            margin-right: 20px;
        }

    .Input_Password {
        border-radius: 20px;
        /*border: 1px solid #c0c0c0;*/
        outline: 0 !important;
        box-sizing: border-box;
        padding: 12px 15px;
    }


    .input-group input {
        height: 30px;
        width: 100%;
        padding: 12px 15px;
        font-size: 13px;
    }

    .input-group label {
        padding-right: 30px;
        font-size: 12px;
        font-weight: bold;
    }

    .page-link {
        text-decoration: underline;
        margin: 0;
        text-align: end;
        color: #747474;
        text-decoration-color: #747474;
    }

    .page-link-label {
        cursor: pointer;
        font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande", "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
        font-size: 9px;
        font-weight: 700;
    }

        .page-link-label:hover {
            color: #000;
        }

    .btn_Login {
        padding: 10px 15px;
        font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande", "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
        border-radius: 20px;
        border: 0 !important;
        outline: 0 !important;
        /*margin-left: 95px;*/
        margin-bottom: 20px;
        background: teal;
        color: white;
        cursor: pointer;
        /* box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;*/
        width: -webkit-fill-available;
        height: 50px;
        font-weight: bold;
    }

        .btn_Login:active {
            box-shadow: none;
        }

        .btn_Login:hover {
            background: #fff;
            color: teal;
            box-shadow: 5px 10px 20px 0 rgba(0, 0, 0, 0.5);
            border: 2px solid #000;
        }

    .Signup_label {
        margin: 0;
        font-size: 13px;
        color: #000;
        font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande", "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
        text-align: center;
    }


    .signup_link {
        margin-left: 1px;
        font-size: 13px;
        text-decoration: underline;
        text-decoration-color: teal;
        color: teal;
        cursor: pointer;
        font-weight: 800;
        font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande", "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
    }

    .forgot_Password {
        padding-top: 10px;
        padding-bottom: 10px;
    }

        .forgot_Password span {
            font-size: 14px;
        }
</style>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="form-container form_ctn_Login">
        <h2 class="Title_Login">Đăng Nhập</h2>
        <hr />
        @using (Html.BeginForm("Login", "Customer", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <!--FORM-->
    <form class="form_login">
        <!-- Email -->
        <div class="input-group Input_User">
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="text" class="form-control" id="Email" name="Email">

            </div>
        </div>

        <!-- Password -->
        <div class="input-group Input_Password">
            <div class="form-group">
                <label for="Password_hs5">Password</label>
                <input type="password" class="form-control" id="Password_hs5" name="Password_hs5">

            </div>
        </div>
        <p class="page-link forgot_Password">
            <b>@ViewBag.thongBao</b>
        </p>
        <p class="page-link forgot_Password">
            <span class="page-link-label">Forgot Password?</span>
        </p>

        <!-- Button Login -->
        <button type="submit" class="btn_Login">Sign in</button>
    </form>

            //Signup: đăng ký
            <p class="Signup_label">
                Bạn chưa có tài khoản? @Html.ActionLink("Đăng ký ngay", "Create", "Customer", null, new { @class = "signup_link" })
            </p>
            <p class="Signup_label">
                <a href="/Customer/QuenMatKhau">Quên Mật Khẩu</a>
            </p>
        }
    </div>
</body>
</html>
