@model ShopThoiTrang.Models.DanhMuc

@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Areas/Admin/Views/Shared/LayoutPageAdmin.cshtml";
}

<h2 class="title_page"><u>Chỉnh Sửa Thông Tin Danh Mục</u></h2>

@*back to list*@
<div class="btn_BackToList">
    <button style="height: 2em;">
        <i class="fa-solid fa-arrow-left"></i>
        <span> @Html.ActionLink("Back to List", "Index", null, new { style = "color: black;" })</span>
    </button>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MaDanhMuc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaDanhMuc, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MaDanhMuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenDanhMuc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
            </div>
        </div>

       <!--Button save-->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Save" class="btn btn-default" />*@
                <button class="btn_save">
                    <span class="ctn_IconSave">
                        <i class="fa-solid fa-floppy-disk icon_save" style="color: #ffffff;"></i>
                    </span>
                    <p class="text_save">Save</p>
                </button>
            </div>
        </div>

    </div>
}



