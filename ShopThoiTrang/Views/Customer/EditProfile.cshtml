@model ShopThoiTrang.Models.KHACHHANG

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Share/LayoutPage_Customer.cshtml";
}

<style>
    .avatar_customer {
        width: 200px;
        height: 210px;
        border: 5px solid #277c10;
        border-radius: 50%;
        /*float: left;*/
    }

        .avatar_customer img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
        }
    .btn_SaveChange {
        background: #2ea532;
        color: white;
        width: 100px;
        height: 40px;
        margin-top: 20px;
        /*padding: 10px 10px;*/
        font-size: 16px;
        font-weight: bold;
        border: 2px solid #00ff21;
        border-radius: 30px;
        text-align: center;
    }

        .btn_SaveChange i {
            padding-right: 10px;
        }

        .btn_SaveChange:hover {
            background: #fff;
            border: 2px solid #00ff21;
        }

    .btn_chooseimg {
        margin-top: 20px;
        margin-left: 20px;
        font-size: 13px;
    }

    .title_customer {
        font-size: 16px;
        font-weight: bold;
        width: 100%;
        text-align: left;
        margin-bottom: 10px;
    }

    .txt_customer {
        font-size: 16px;
    }

</style>


<div>
    @using (Html.BeginForm("EditProfile", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="container" style="padding-top: 150px;">

            <!--Row-->
            <div class="row">
                <!--COLUMN 1: Avatar - button choose file - Button Save-->
                <div class="col-md-3">
                    <div class="form-group">
                        @*@Html.LabelFor(model => model.Avatar, htmlAttributes: new { @class = "control-label col-md-2" })*@

                        <!--Avatar-->
                        <div class="col-md-10  d-flex justify-content-center align-items-center">
                            <div class="avatar_customer">
                                <img src="~/Image/@Model.Avatar" alt="Avatar">
                            </div>
                        </div>
                        <!--Button choose new avatar: button avatar mới-->
                        <div class="col-md-10 btn_chooseimg d-flex justify-content-center align-items-center">
                            <input type="file" name="file" id="file" />
                            @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!--Button save change: Button lưu thay đổi-->
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 d-flex justify-content-center align-items-center">
                            <button type="submit" class="btn btn-default btn_SaveChange"><i class="fa-regular fa-floppy-disk"></i>Save</button>
                        </div>
                    </div>
                </div>



                <!--COLUMN 2: các tiêu đề-->
                <div class="col-md-3">

                    <!--Mã số-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.MaKH, "Mã Khách Hàng", htmlAttributes: new { @class = "control-label col-md-2 title_customer" })
                            <hr />
                        </div>
                    </div>

                    <!--Name-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.TenKH, "Họ Và Tên", htmlAttributes: new { @class = "control-label col-md-2 title_customer" })
                            <hr />
                        </div>
                    </div>

                    <!--Phone-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.SoDienThoai, "Số Điện Thoại", htmlAttributes: new { @class = "control-label col-md-2 title_customer" })
                            <hr />

                        </div>
                    </div>

                    <!--Email-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2 title_customer" })
                            <hr />

                        </div>
                    </div>

                    <!--Địa chỉ-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.DiaChi, "Địa Chỉ", htmlAttributes: new { @class = "control-label col-md-2 title_customer" })
                            <hr />

                        </div>
                    </div>

                    <!--Password-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.Password_hs5, "Mật Khẩu", htmlAttributes: new { @class = "control-label col-md-2 title_customer" })
                            <hr />

                        </div>
                    </div>

                    <!--Giới tính-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.TrangThai, "Giới Tính", htmlAttributes: new { @class = "control-label col-md-2 title_customer" })
                            <hr />

                        </div>
                    </div>

                    <!--Trạng thái-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.GioiTinh, "Trạng Thái", htmlAttributes: new { @class = "control-label col-md-2 title_customer" })
                            <hr />

                        </div>
                    </div>
                </div>


                <!--COLUMN 3: các thẻ input-->
                <div class="col-md-6">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!--Mã Khách hàng-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MaKH, new { htmlAttributes = new { @class = "form-control txt_customer" } })
                            @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                            <hr />
                        </div>
                    </div>

                    <!--Tên khách hàng-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control txt_customer" } })
                            @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                            <hr />

                        </div>
                    </div>

                    <!--Số điện thoại-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control txt_customer" } })
                            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                            <hr />

                        </div>
                    </div>

                    <!--Email-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control txt_customer" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            <hr />

                        </div>
                    </div>

                    <!--Địa chỉ-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control txt_customer" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            <hr />

                        </div>
                    </div>

                    <!--Password-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Password_hs5, new { htmlAttributes = new { @class = "form-control txt_customer" } })
                            @Html.ValidationMessageFor(model => model.Password_hs5, "", new { @class = "text-danger" })
                            <hr />

                        </div>
                    </div>

                    <!--Giới tính-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control txt_customer" } })
                            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                            <hr />

                        </div>
                    </div>

                    <!--Trạng thái-->
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control txt_customer" } })
                            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                            <hr />

                        </div>
                    </div>

                </div>
            </div>
        </div>
    }

</div>
